<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_start"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guide_end"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <View
        android:id="@+id/rectanglebg"
        android:layout_width="0dp"
        android:layout_height="69dp"
        android:background="@drawable/top_rectangle"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <ImageView
        android:id="@+id/Clickback"
        android:layout_width="36dp"
        android:layout_height="36dp"
        android:src="@drawable/left"
        android:contentDescription="Back Button"
        android:clickable="true"
        app:layout_constraintStart_toStartOf="@id/guide_start"
        app:layout_constraintTop_toTopOf="@id/rectanglebg"
        app:layout_constraintBottom_toBottomOf="@id/rectanglebg"
        android:layout_marginStart="16dp" />
    <TextView
        android:id="@+id/SetuopSchedHobbyName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hobby Name"
        android:textSize="20sp"
        android:textColor="#545454"
        android:fontFamily="@font/inter_bold"
        app:layout_constraintTop_toTopOf="@id/rectanglebg"
        app:layout_constraintStart_toEndOf="@id/Clickback"
        android:layout_marginStart="35dp"
        android:layout_marginTop="20dp"/>
    
    <TextView
        android:id="@+id/SetUpSchedText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SET UP SCHEDULE"
        android:textSize="20sp"
        android:textColor="#205375"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="900"
        app:layout_constraintTop_toBottomOf="@id/rectanglebg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="49dp" />

    <LinearLayout
        android:id="@+id/Timepicker"
        android:layout_width="180dp"
        android:layout_height="150dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/SetUpSchedText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp">

        <TextView
            android:id="@+id/hourlabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hour"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="10dp"/>
        <NumberPicker
            android:id="@+id/HourPicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="-50dp"
            android:selectionDividerHeight="0dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minute"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:layout_marginTop="20dp"
            android:layout_marginStart="20dp"/>
        <NumberPicker
            android:id="@+id/MinutePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginStart="-60dp"
            android:selectionDividerHeight="0dp"/>
        <Spinner
            android:id="@+id/am_pm_spinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/am_pm_options"
            android:layout_marginTop="60dp"
            android:layout_marginStart="5dp"/>
    </LinearLayout>

    <View
        android:id="@+id/RepeatHobbyBG"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:background="@drawable/progress_rectangle"
        android:backgroundTint="#E6E6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Timepicker"
        android:layout_marginTop="60dp"/>
    <ImageView
        android:id="@+id/RepeatHobbyImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/repeat_hobby"
        app:layout_constraintStart_toStartOf="@id/RepeatHobbyBG"
        app:layout_constraintTop_toTopOf="@id/RepeatHobbyBG"
        app:layout_constraintEnd_toEndOf="@id/RepeatHobbyBG"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="249dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Repeat Hobby"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="300"
        app:layout_constraintStart_toEndOf="@id/RepeatHobbyImage"
        app:layout_constraintTop_toTopOf="@id/RepeatHobbyBG"
        android:layout_marginTop="14dp"
        android:layout_marginStart="5dp"/>

    <View
        android:id="@+id/ReminderBG"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:background="@drawable/progress_rectangle"
        android:backgroundTint="#E6E6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RepeatHobbyBG"
        android:layout_marginTop="7dp"/>
    <ImageView
        android:id="@+id/ReminderImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/remind"
        app:layout_constraintStart_toStartOf="@id/ReminderBG"
        app:layout_constraintTop_toTopOf="@id/ReminderBG"
        app:layout_constraintEnd_toEndOf="@id/ReminderBG"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="249dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remind at"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="300"
        app:layout_constraintStart_toEndOf="@id/ReminderImage"
        app:layout_constraintTop_toTopOf="@id/ReminderBG"
        android:layout_marginTop="14dp"
        android:layout_marginStart="5dp"/>

    <View
        android:id="@+id/NotificationsBG"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:background="@drawable/progress_rectangle"
        android:backgroundTint="#E6E6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ReminderBG"
        android:layout_marginTop="7dp"/>
    <ImageView
        android:id="@+id/NotificationsImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/notif"
        app:layout_constraintStart_toStartOf="@id/NotificationsBG"
        app:layout_constraintTop_toTopOf="@id/NotificationsBG"
        app:layout_constraintEnd_toEndOf="@id/NotificationsBG"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="249dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="300"
        app:layout_constraintStart_toEndOf="@id/NotificationsImage"
        app:layout_constraintTop_toTopOf="@id/NotificationsBG"
        android:layout_marginTop="14dp"
        android:layout_marginStart="5dp"/>

    <View
        android:id="@+id/NotesBG"
        android:layout_width="283dp"
        android:layout_height="50dp"
        android:background="@drawable/progress_rectangle"
        android:backgroundTint="#E6E6E6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NotificationsBG"
        android:layout_marginTop="7dp"/>
    <ImageView
        android:id="@+id/NotesImage"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/notes"
        app:layout_constraintStart_toStartOf="@id/NotesBG"
        app:layout_constraintTop_toTopOf="@id/NotesBG"
        app:layout_constraintEnd_toEndOf="@id/NotesBG"
        android:layout_marginTop="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="249dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notes"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="300"
        app:layout_constraintStart_toEndOf="@id/NotesImage"
        app:layout_constraintTop_toTopOf="@id/NotesBG"
        android:layout_marginTop="14dp"
        android:layout_marginStart="5dp"/>
    
    <Button
        android:id="@+id/SetUpSchedCancelButton"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:text="Cancel"
        android:textSize="14sp"
        android:textColor="@color/black"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="400"
        android:backgroundTint="#D9D9D9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NotesBG"
        android:layout_marginStart="62dp"
        android:layout_marginEnd="191dp"
        android:layout_marginTop="70dp"/>

    <Button
        android:id="@+id/SetUpSchedSaveButton"
        android:layout_width="105dp"
        android:layout_height="42dp"
        android:text="Save"
        android:textSize="14sp"
        android:textColor="#FDF8F0"
        android:fontFamily="@font/inter_light"
        android:textFontWeight="400"
        android:backgroundTint="#D7942E"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/NotesBG"
        android:layout_marginStart="190dp"
        android:layout_marginEnd="63dp"
        android:layout_marginTop="70dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>