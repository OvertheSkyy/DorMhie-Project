<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgcolor">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/getstarted_logo">
    </ImageView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discover new pasions and\n unlock your creativity"
        android:textSize="17sp"
        android:textAlignment="center"
        android:textColor="@color/blueish"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="410dp">
    </TextView>

    <Button
        android:layout_width="120dp"
        android:layout_height="48dp"
        android:id="@+id/Nextpagebutton"
        android:text="Next"
        android:textSize="12sp"
        android:textColor="@color/white"
        android:background="@drawable/button_design"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="85dp"
        android:padding="4dp">
    </Button>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/NaviDot"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp">
    </LinearLayout>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/Dot1"
        android:src="@drawable/dot_inactive"
        android:layout_alignParentStart="true"
        android:layout_marginTop="560dp"
        android:layout_marginStart="170dp">
    </ImageView>

    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/Dot2"
        android:src="@drawable/dot_active"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="560dp">
    </ImageView>
    <ImageView
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:id="@+id/Dot3"
        android:src="@drawable/dot_inactive"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="170dp">
    </ImageView>

</RelativeLayout>