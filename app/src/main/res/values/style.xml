<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="FixEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">#1F2122</item>
        <item name="android:background">@null</item>
    </style>

    <style name="CalendarWeekdayTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#205375</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DateTextAppearance" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">#1F2122</item>
        <item name="android:textSize">13sp</item>
    </style>
    <style name="CalendarViewStyle" parent="android:style/Widget.CalendarView">
        <item name="android:calendarTextColor">@drawable/currentdate</item>
    </style>

    <style name="NumberPickerStyle">
        <!-- Apply a custom text color -->
        <item name="android:textColorPrimary">@color/white</item>
        <!-- Apply a custom divider color -->
        <item name="android:colorControlNormal">@color/black</item>
    </style>

</resources>